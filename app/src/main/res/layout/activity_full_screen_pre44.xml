<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FullScreenPre44Activity">

    <Button
            android:text="Show System Ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_system_ui_btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.519"/>
    <Button
            android:text="Hide System UI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hide_system_ui_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/show_system_ui_btn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Im top to test translucent bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Im below to test translucent bar"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="ControlView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/control_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/show_system_ui_btn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/hide_system_ui_btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>